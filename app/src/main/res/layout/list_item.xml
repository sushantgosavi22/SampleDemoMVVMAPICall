<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.sushant.sampledemomvvmapicall.model.FeedItem" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        bind:targetApi="lollipop">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal"
            android:weightSum="100">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRank"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="10"
                android:text="@{item.rank??@string/not_applicable}"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/sp_16"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="40"
                android:text="@{item.name??@string/not_applicable}"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="Bitcoin" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubTitle"
                android:layout_weight="25"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                tools:text="+21.23"
                bind:bind24Hour="@{item.changePercent24Hr}"
                android:textColor="@{item.isPriceUp ? @color/green : @color/red}"
                android:textSize="@dimen/sp_16"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubSubTitle"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="25"
                bind:bindPrice="@{item.priceUsd}"
                android:textColor="@{item.isPriceUp ? @color/green : @color/red}"
                android:textSize="@dimen/sp_16"
                tools:text="+21.23" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>


</layout>